<?xml version="1.0" ?>
<robot name="robot_arm">

    <material name="green">
        <color rgba="0 1 0 1"/>
    </material>
    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>
    <material name="yellow">
        <color rgba="1 1 0 1"/>
    </material>
    
    <link name="link1">
        <visual>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <box size="1 2 1"/>
            </geometry>
            <material name="green">
                <color rgba="0 1 0 1"/>
            </material>
        </visual>
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <geometry>
                <box size=".1 .2 .1"/>
            </geometry>
        </collision>
    </link>

  
  <link name="link2">
    <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
            <cylinder length="0.5" radius="0.1"/>
        </geometry>
        <material name="yellow">
            <color rgba="1 1 0 1"/>
        </material>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.5" radius="0.1"/>
      </geometry>
    </collision>
  </link>


  <link name="link3">
    <visual>
      <origin rpy="0 3.141592653589793 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.5" radius="0.1"/>
      </geometry>
      <material name="green">
      </material>
    </visual>
    <collision>
      <origin rpy="0 3.141592653589793 0" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.5" radius="0.1"/>
      </geometry>
    </collision>
  </link>

  
  <joint name="joint_1" type="continuous">
    <parent link="link1"/>
    <child link="link2"/>
    <origin rpy="0 0 0" xyz="0 0 0.2"/>
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="-3.141592653589793" upper="3.141592653589793" velocity="2.5"/>
  </joint>
  
  <joint name="joint_2" type="revolute">
    <parent link="link_2"/>
    <child link="link_3"/>
    <origin rpy="-1.5707963267948966 -1.0471975511965976 1.5707963267948966" xyz="0.2 0 0.2"/>
    <axis xyz="0 0 1"/>
    <limit effort="1000.0" lower="-3.141592653589793" upper="3.141592653589793" velocity="2.5"/>
  </joint>
</robot>

