<?xml version="1.0"?>
<robot name="three_link_robot">
    <!-- Link 1: Box -->
    <link name="link1">
        <visual>
            <geometry>
                <box size="0.1 0.2 0.1"/>
            </geometry>
            <material name="blue">
                <color rgba="0 0 1 1"/>
            </material>
        </visual>
    </link>
    
    <!-- Joint 1: Connects Link 1 to Link 2 -->
    <joint name="joint1" type="fixed">
        <parent link="link1"/>
        <child link="link2"/>
        <origin xyz="0 0.1 0" rpy="0 0 0"/>
    </joint>
    
    <!-- Link 2: Cylinder -->
    <link name="link2">
        <visual>
            <geometry>
                <cylinder length="0.5" radius="0.1"/>
            </geometry>
            <material name="yellow">
                <color rgba="1 1 0 1"/>
            </material>
        </visual>
    </link>
    
    <!-- Joint 2: Connects Link 2 to Link 3 -->
    <joint name="joint2" type="fixed">
        <parent link="link2"/>
        <child link="link3"/>
        <origin xyz="0.3536 0.3536 0.25" rpy="0 0 0"/>
    </joint>
    
    <!-- Link 3: Cylinder -->
    <link name="link3">
        <visual>
            <geometry>
                <cylinder length="0.5" radius="0.1"/>
            </geometry>
            <material name="green">
                <color rgba="0 1 0 1"/>
            </material>
        </visual>
    </link>
</robot>
